# SRE Inference Gateway Environment Variables
# Copy this file to .env and update values for local development
# For production, use Doppler or secure environment variable management

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
METRICS_PORT=9090

# Provider Configuration (JSON format)
# PROVIDER_WEIGHTS={"mock_openai": 0.5, "mock_vllm": 0.5}

# Request Processing
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30.0
HEALTH_CHECK_INTERVAL=30.0

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

