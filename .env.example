# SRE Inference Gateway Environment Variables
# Copy this file to .env and update values for local development
# For production, use Doppler or secure environment variable management

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
METRICS_PORT=9090

# Provider Configuration (JSON format)
# PROVIDER_WEIGHTS={"mock_openai": 0.5, "mock_vllm": 0.5}

# Request Processing
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30.0
HEALTH_CHECK_INTERVAL=30.0

# Redis Configuration
# Use individual Redis settings - REDIS_URL is ignored when individual keys are provided
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password_here
# For local development, TLS is typically disabled. Production deployments MUST enable TLS
# to protect Redis traffic over networks. Set REDIS_TLS_ENABLED=true when deploying to
# environments with TLS-enabled Redis (e.g., AWS ElastiCache, Azure Cache for Redis).
REDIS_TLS_ENABLED=false
# REDIS_URL=redis://default:your_secure_redis_password_here@localhost:6379/0
# For TLS: REDIS_URL=rediss://default:your_secure_redis_password_here@redis.example.com:6380/0

# Grafana Configuration
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
# Use http for local development; override to https for production deployments
GRAFANA_PROTOCOL=http
GRAFANA_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_API_KEY=your_grafana_api_key_here
GRAFANA_ORG=Main Org.

# Development overrides (only for local development)
# DEBUG=true
# LOG_LEVEL=DEBUG